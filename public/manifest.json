{
  "manifest_version": 3,
  "name": "Unlock Right Click & Selection & Copy - 右クリック・選択・コピー制限解除",
  "short_name": "Unlock Right Click & Selection & Copy",
  "version": "0.3.0",
  "description": "右クリック・テキスト選択・コピーの制限を解除するChrome拡張機能",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
